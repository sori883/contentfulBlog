{
  "name": "contentfulblog",
  "type": "module",
  "scripts": {
    "copy": "sh cp-images.sh",
    "dev": "vite --host",
    "build": "vite build --mode client && vite build",
    "preview": "pnpm run build && wrangler dev",
    "deploy:worker": "pnpm run build && wrangler deploy",
    "clean": "rm -rf dist/ node_modules/",
    "lint": "eslint .",
    "lint:text": "textlint contents/**/*.mdx --config .textlintrc.json",
    "lint:textfix": "textlint --fix contents/**/*.mdx --config .textlintrc.json",
    "format": "prettier --check \"**/*.{ts,tsx}\" --cache",
    "format:fix": "prettier --write \"**/*.{ts,tsx}\" --cache",
    "typecheck": "tsc --noEmit"
  },
  "private": true,
  "engines": {
    "node": ">=24.11.0"
  },
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "feed": "^5.1.0",
    "hono": "^4.10.4",
    "honox": "^0.1.46",
    "jsdom": "^27.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251225.0",
    "@eslint/js": "^9.37.0",
    "@formkit/tempo": "^0.1.2",
    "@hono/eslint-config": "^2.0.3",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.23.0",
    "@hono/vite-ssg": "^0.2.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@mdx-js/rollup": "^3.1.1",
    "@tailwindcss/vite": "^4.0.9",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "@textlint/textlint-plugin-markdown": "^15.2.3",
    "@twemoji/parser": "^16.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "recma-export-filepath": "^1.2.0",
    "rehype-highlight": "^7.0.2",
    "rehype-mdx-code-props": "^3.0.1",
    "rehype-mdx-import-media": "^1.2.0",
    "rehype-mermaid": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^5.2.0",
    "tailwindcss": "^4.0.9",
    "textlint": "^15.2.3",
    "textlint-rule-aws-service-name": "^1.13.1",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-unnatural-alphabet": "^2.0.1",
    "textlint-rule-no-doubled-joshi": "^5.1.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "typescript-eslint": "^8.46.3",
    "vite": "^6.4.1",
    "vite-plugin-static-copy": "^3.1.4",
    "wrangler": "^4.45.4"
  }
}